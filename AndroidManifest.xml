<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.scheduleralarm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconimg11"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.example.scheduleralarm.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.scheduleralarm.AddAlarm"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="com.example.scheduleralarm.TimeToRing"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <activity android:name="com.example.scheduleralarm.alarmTime"
            android:theme="@android:style/Theme.NoTitleBar"></activity>
        <receiver android:name="com.example.scheduleralarm.TestService"></receiver>
    </application>

</manifest>
